$fn = brandon-grotesque, sans-serif

$w = white
$text = #001646
$accent = #086BAE
$border = #BEC6D6
$footer = #9FA7B7

*
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box

html,
body
  color $text
  margin 0
  padding 0

.container
  margin 0 auto
  max-width 960px
  text-align center

// Styling on warning for users on IE7 or below
.browsehappy
  text-align center
  margin 0
  background #fff8e2
  color #000
  padding 0.5em 0

h1.logo
  background url("/images/logo@1x.png") center no-repeat
  background-size 190px 56px
  height 56px
  margin 90px auto 60px
  text-indent -9999px
  width 190px
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    background url("/images/logo@2x.png") center no-repeat
    background-size 190px 56px
  
h2
  font 100 40px/44px $fn
  margin 0 0 60px
  p
    font 100 20px/26px $fn
    margin 30px 0 0
    
form
  margin 0 0 60px
  input
    appearance none
    -moz-appearance none
    -webkit-appearance none
    border 1px solid transparent
    border-radius 2px
    -moz-border-radius 2px
    -webkit-border-radius 2px
    display inline-block
    font-size 14px
    height 40px
    outline 0
    transition background 200ms ease, border 200ms ease
    &[type="email"]
      border 1px solid $border
      padding 0 10px
      &:hover, &:focus
        border 1px solid darken($border, 20%)
      @media (min-width: 468px)
        margin-right 20px
        min-width 300px
    &[type="submit"]
      background $accent
      color $w
      font-weight 700
      letter-spacing 0.1em
      padding 0 30px
      &:hover
        background darken($accent, 10%)
        cursor pointer
        
.mailchimp
  position relative
  #mce-responses
    background white
    font 400 16px/40px $fn
    left 0
    line-height 40px
    position absolute
    top 0
    width 100%


.feature-row
  display inline-block
  margin 0 0 100px
  width 100%
  &:after
    clear both
    content ""
    display block
    height 0
    font-size 0
    visiblity hidden
  .feature-row_item
    float left
    padding 0 80px
    width 33.33333%
    .img
      height 60px
      line-height 60px
      margin 0 auto
      text-align center
      width 60px
      img
        vertical-align middle
    p
      font 16px/18px $fn
      
footer
  color $footer
  font 14px/22px $fn
  padding-bottom 15px
  p
    margin 0 auto
    &:last-of-type
      margin-top 60px
  a
    color inherit
    
// Utilities
.group:after
  clear both
  content ""
  display block
  height 0
  visibility hidden
* html .group 
  zoom 1
*:first-child+html .group
  zoom 1